import streamlit as st

# --- Custom CSS (same as Home) ---
st.markdown("""
<style>
body, .stApp {
    background-color: #6699CC;
    color: #000000 !important;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.stTitle h1, .stTitle h1 a {
    color: #000000 !important;
    text-decoration: none !important;
    pointer-events: none !important;
}
label, div[data-testid="stMarkdownContainer"] p {
    color: #000000 !important;
}
</style>
""", unsafe_allow_html=True)

st.title("Feature Explanations")

# Example: feature explanations
feature_explanations = {
    "age": "The age of the individual in years.",
    "income": "Annual income in USD.",
    "education": "Level of education achieved.",
    "marital_status": "Marital status: Single, Married, Divorced, etc.",
    "occupation": "Job type of the individual.",
    "credit_score": "Credit score rating (300-850)."
}

for feature, explanation in feature_explanations.items():
    st.markdown(f"**{feature}**: {explanation}")
